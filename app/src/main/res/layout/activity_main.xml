<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="me.annenkov.translator.activity.MainActivity">

    <ImageButton
        android:id="@+id/swapLanguage"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/swap_horizontal"/>

    <Button
        android:id="@+id/firstLanguage"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/swapLanguage"/>

    <Button
        android:id="@+id/secondLanguage"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/swapLanguage"/>

    <EditText
        android:id="@+id/inputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/swapLanguage"
        android:layout_centerHorizontal="true"
        android:hint="@string/type_text_for_translation"
        android:inputType="textMultiLine"
        android:maxHeight="150dp"
        android:minHeight="150dp"
        android:padding="10dp"
        android:textSize="22sp"/>

    <ImageButton
        android:id="@+id/clearTextMain"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="19dp"
        android:layout_height="24dp"
        android:layout_alignRight="@id/inputText"
        android:layout_alignTop="@id/inputText"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/close"
        android:visibility="invisible"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/inputText">

        <android.support.v7.widget.CardView
            android:id="@+id/translatedTextCardView"
            style="@style/TranslatedTextCardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:minHeight="150dp"
            android:scrollbars="vertical"
            android:visibility="invisible">

            <TextView
                android:id="@+id/translatedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/inputText"
                android:layout_centerHorizontal="true"
                android:layout_margin="25dp"
                android:textColor="@color/white"
                android:textSize="22sp"/>

            <ImageButton
                android:id="@+id/addToFavoritesButtonMain"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="19dp"
                android:layout_height="24dp"
                android:layout_gravity="top|right"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/bookmark_outline_white"/>
        </android.support.v7.widget.CardView>
    </ScrollView>
</RelativeLayout>
